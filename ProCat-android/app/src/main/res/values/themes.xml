<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProCat" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_orange</item>
        <item name="colorPrimaryVariant">@color/accent_teal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_primary</item>
        <item name="colorSecondaryVariant">@color/background_dark</item>
        <item name="colorOnSecondary">@color/font</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="LOLLIPOP">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/background_primary</item>
        <item name="actionBarStyle">@style/Theme.ProCat.AppBarOverlay</item>
    </style>

    <style name="Theme.ProCat.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" >
        <item name="background">@color/accent_teal</item>
        <item name="android:background">@color/accent_teal</item>
    </style>

    <style name="Theme.ProCat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
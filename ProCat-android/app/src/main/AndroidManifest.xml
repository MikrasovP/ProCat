<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="vsu.csf.procat">

    <uses-sdk tools:overrideLibrary="       androidx.camera.camera2, androidx.camera.core,       androidx.camera.view, androidx.camera.lifecycle" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".ProCatApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProCat"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".ui.LauncherActivity"
            android:noHistory="true"
            android:theme="@style/noAnimTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.rentinventorylist.RentInventoryListActivity" />
        <activity android:name=".ui.rentstationslist.RentStationsListActivity" />
        <activity android:name=".ui.profile.ProfileActivity" />
        <activity android:name=".ui.auth.AuthActivity" />
        <activity android:name=".ui.scanner.ScannerActivity" />
        <activity android:name=".ui.rentinventorydetail.RentInventoryDetailActivity" />
    </application>

</manifest>